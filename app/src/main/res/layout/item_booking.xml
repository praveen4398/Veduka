<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/booking_planner_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/booking_planner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planner Name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/booking_planner_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Place"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/booking_planner_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜… 4.5/5"
                android:textSize="14sp"
                android:textColor="#FFA000"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/booking_status_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#7C3AED"
                android:layout_marginTop="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_gravity="end"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>