<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Booking"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#512E7B"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modify your existing booking details with ease."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#444"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_edit_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:backgroundTint="#8E24AA"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Booking"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#512E7B"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel your reservation anytime before the scheduled date."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#444"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_cancel_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:backgroundTint="#8E24AA"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please note: once a booking is cancelled, it cannot be reinstated or accepted again."
            android:textSize="14sp"
            android:textColor="#B00020"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
