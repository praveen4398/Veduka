<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="NavDrawerItemText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item> <!-- Increase text size -->
        <item name="android:textColor">#000000</item> <!-- Optional: control text color -->
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#512E7B</item>
    </style>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>  <!-- or any dp you want -->
    </style>
    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <!-- Added padding for better spacing between dates -->
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6C2886</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <!-- Added padding for better spacing -->
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style></resources>